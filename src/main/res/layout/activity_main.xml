<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcc00"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="335dp"
        android:layout_height="167dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_banner_foreground"
        tools:layout_editor_absoluteX="38dp" />

    <EditText
        android:id="@+id/tekst1"
        android:layout_width="335dp"
        android:layout_height="279dp"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:background="#FFFFFF"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="10sp"
        android:padding="10px"
        android:textColor="#d40411"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="335dp"
        android:layout_height="63dp"
        android:layout_marginLeft="8dp"
        android:background="#d40411"
        android:fadingEdge="horizontal"
        android:text="SKENIRAJ PONOVO"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="332dp"
        android:layout_height="186dp"
        android:layout_marginLeft="38dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/tekst1"
        app:srcCompat="@mipmap/ic_banner3_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>